<h2>New game</h2>

<div class="container">
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>

  <form action="score">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="guess">What is the longest word you can find?</label>
    <input class="box" type="text" name="guess" id="guess">
    <input name="hiddenLetters", type="hidden" value="<%= @letters.join %>">
    <input type="submit" value="Play">
  </form>
</div>
